<% if @recipe %>
  <form action="/<%= @recipe.id %>" method="post" id="edit">
    <input type="hidden" name="_method" value="put">
    <textarea name="content"><%=h @recipe.content %></textarea>
    <input type="submit" value="Submit">
  </form>
  <p><a href="/<%= @recipe.id %>/delete">Delete</a></p>
<% else %>
  <p>Recipe not found.</p>
<% end %>